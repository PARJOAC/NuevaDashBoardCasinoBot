<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CasinoBot Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .btn-discord-login {
        display: inline-flex;
        align-items: center;
        background: #5865f2;
        color: white;
        padding: 0.5rem 1.2rem;
        border: none;
        transition: all 0.25s ease-in-out;
        text-decoration: none;
      }

      .btn-discord-login:hover {
        background: #4752c4;
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 0 12px rgba(88, 101, 242, 0.6);
      }

      .btn-discord-login img {
        filter: brightness(0) invert(1);
      }
      .fade-in {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeIn 0.8s ease forwards;
      }
      @keyframes fadeIn {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .hover-animate {
        transition: transform 0.6s ease, box-shadow 0.6s ease;
      }
      .hover-animate:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
      }
      .content-wrapper {
        max-width: 1100px;
      }
    </style>
  </head>
  <body class="bg-light">
    <%- include('partials/navbar') %>

    <!-- Hero -->
    <section class="fade-in my-4">
      <div
        class="container content-wrapper bg-white rounded shadow p-4 p-md-5 mx-auto"
      >
        <div class="row align-items-center g-4">
          <div class="col-md-6 text-center text-md-start">
            <h1 class="fw-bold display-5 mb-3">CasinoBot Dashboard</h1>
            <p class="lead text-secondary mb-4">
              Manage your own casino in Discord! Play blackjack, roulette, dice,
              and more with a customizable economy, daily rewards, and
              competitive leaderboards.
            </p>

            <% if (!user) { %>
            <a
              href="/auth/login"
              class="btn-discord-login rounded-pill fw-semibold px-3"
            >
              <img
                src="https://cdn.worldvectorlogo.com/logos/discord-6.svg"
                alt="Discord Logo"
                width="24"
                height="24"
                class="me-2"
              />
              Login with Discord
            </a>
            <% } else { %>
            <a
              href="/dashboard"
              class="btn btn-success btn-lg rounded-pill fw-semibold"
            >
              Go to My Dashboard
            </a>
            <% } %>
          </div>

          <div class="col-md-6 text-center">
            <img
              src="/images/logo.png"
              alt="Casino Illustration"
              class="img-fluid"
              style="max-width: 320px"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Stats -->
    <section class="fade-in my-4">
      <div class="container content-wrapper mx-auto">
        <div class="row g-4 text-center">
          <div class="col-md-6">
            <div class="bg-white p-4 rounded shadow hover-animate">
              <h2 class="fw-bold text-primary display-5">
                <%= totalPlayers %>
              </h2>
              <p class="fs-5 mb-0">Total Players</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="bg-white p-4 rounded shadow hover-animate">
              <h2 class="fw-bold text-success display-5">
                <%= totalServers %>
              </h2>
              <p class="fs-5 mb-0">Total Servers</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Top Servers -->
    <section class="fade-in my-5">
      <div class="container content-wrapper mx-auto">
        <h2 class="text-center fw-bold mb-4">üèÜ Top Servers</h2>
        <div class="row g-4 justify-content-center">
          <% if (topServers.length === 0) { %>
          <p class="text-center">No server data available.</p>
          <% } %> <% topServers.forEach((srv) => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card shadow border-0 text-center p-3 hover-animate">
              <div class="card-body">
                <img
                  src="<%= srv.icon || 'https://cdn.discordapp.com/embed/avatars/0.png' %>"
                  alt="Server Icon"
                  class="rounded-circle mb-3 border"
                  style="width: 70px; height: 70px; object-fit: cover"
                />
                <h5 class="card-title fw-bold mb-1"><%= srv.name %></h5>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
